 @model List<ReceivedSample>
<div class=col-sm-12>
        <table class="table table-striped table-bordered table-sm align-middle border border-dark  table-hover" id="dtBasicExample" cellspacing="0" width="100%">
            <thead >
                <tr>
                    <th class="text-center text-nowrap" scope="col" colspan="2"></th>
                    <th  class="text-center text-nowrap" scope="col" colspan="2">حاله العينه </th>
                    <th  class="text-center text-nowrap" scope="col" colspan="2">عدد العينات</th>
                    <th  class="text-center text-nowrap" scope="col" colspan="2">وصف العينه</th>
                    <th  class="text-center text-nowrap" scope="col" colspan="4">مرفقات العميل</th>
                    <th  class="text-center text-nowrap" scope="col" colspan="2">تاريخ الاستلام</th>
                    <th  class="text-center text-nowrap" scope="col" colspan="2">جهه الاستلام </th>
                    <th  class="text-center text-nowrap" scope="col" colspan="3">أسم العميل</th>
                    <th  class="text-center text-nowrap" scope="col" colspan="2">أسم العينه</th>
            
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="text-center text-nowrap" colspan="2">
                            <a href="/RecievedSample/Edit/@item.ID">تعديل </a>|<a class="text-danger" href="\RecievedSample\Delete"> حذف</a>
                        </td>
                        <td class="text-right" colspan="2">@item.SampleStatus</td>
                        <td class="text-right" colspan="2">@item.NumOfSamples</td>
                        <td class="text-right" colspan="2">@item.SampleDescription</td>
                        <td class="text-right" colspan="4">
                            <table>
                                <tbody>
                                    <tr>
                                        @foreach(var file in ViewBag.Attachments)
                                        {
                                            if (file.ReceivedSampleID == item.ID)
                                            {       
                                                <tr>
                                                    <td class="text-right">@file.FileName</td>
                                                    <td>@Html.ActionLink("Download","DownloadFile",new {fileName=file.FileName})</td>    
                                                </tr>
                                            }
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                        <td class="text-right" colspan="2">@item.Date</td>
                        <td class="text-right" colspan="2">@item.ReceivingSide</td>
                        <td class="text-right" colspan="3">@item.Client.Name</td>
                        <td class="text-right" colspan="2">@item.SampleName</td>               
                    </tr>   
                }
            </tbody>
        </table>
    </div>          